<h1>Listing sleepisodes</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sleepisodes.each do |sleepisode| %>
      <tr>
        <td><%= link_to 'Show', sleepisode %></td>
        <td><%= link_to 'Edit', edit_sleepisode_path(sleepisode) %></td>
        <td><%= link_to 'Destroy', sleepisode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sleepisode', new_sleepisode_path %>
